                        </div>
                    </div>

                </aside>

                <section class="col col-xs-12 col-md-8 js-rte-content">
                    @if (!IsInEditingMode)
                    {
                        <p class="h5 primary">@Editable(x => x.Label)</p>
                    }
                    else
                    {
                        @Editable(x => x.Label)
                    }
                    <h1 class="h2 mt0">@Model.Title</h1>
                    @if (!IsInEditingMode)
                    {
                        <p>
                            @Editable(x => x.FirstSectionContent)
                        </p>
                    }

                    else
                    {
                        @Editable(x => x.FirstSectionContent)
                    }

                    @Html.Sitecore().Placeholder("textpagesection1")


                    @if (!IsInEditingMode)
                    {
                        <p>
                            @Editable(x => x.SecondSectionContent)
                        </p>
                    }

                    else
                    {
                        @Editable(x => x.SecondSectionContent)
                    }

                    @Html.Sitecore().Placeholder("textpagesection2")



                    @if (!IsInEditingMode)
                    {
                        <p>
                            @Editable(x => x.ThirdSectionContent)
                        </p>
                    }

                    else
                    {
                        @Editable(x => x.ThirdSectionContent)
                    }

                    @Html.Sitecore().Placeholder("textpagesection3")




                </section>
            </div>
        </article>
    </main>


    @Html.Sitecore().Rendering("{3A90C2E8-F8A9-4EB6-9107-DA55066A5E9F}", new { DataSource = "{C60AA5DF-B286-4F74-9DC7-A2213F27ED33}" })

    <script type="text/javascript" src="/assets/js/main.js"></script>
</body>
</html>
