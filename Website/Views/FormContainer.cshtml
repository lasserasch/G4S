@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<G4S.Modules.FormContainer.Models.FormContainer>
<section class="form row bg-primary white">
    <div class="col col-xs-12 col-md-6">
        <div class="row">
            <div class="col col-xs-10 col-xs-offset-1 col-md-9 col-md-offset-2 entry-content">
                <!-- RTE content -->
                <h2>@Editable(Model, x => x.Title)</h2>
                <p>@Editable(Model, x => x.Text)</p>
            </div>
        </div>
    </div>
    <div class="col col-xs-12 col-md-6 entry-content text-center">
        <div class="row">
            <div class="col col-xs-11 col-md-10">
                @Html.Sitecore().Placeholder("form")
            </div>
        </div>
    </div>
</section>