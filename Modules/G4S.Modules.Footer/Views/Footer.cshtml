@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<G4S.Modules.Footer.Models.Footer>

<footer>
    <div class="container bg-white">
        <div class="row">
            <div class="col col-xs-10 col-xs-offset-1">
                <div class="row entry-content small">
                    <div class="col col-xs-12 col-md-3">
                        @if (IsInEditingMode)
                        {
                            @RenderImage(x => x.LogoImage, isEditable: true)
                        }
                        else
                        {
                            <img src="@Model.LogoImage.Src" alt="@Model.LogoImage.Alt" width="80" height="47">
                        }
                      
                        <div class="row">
                            <div class="col col-xs-3 col-md-4">
                                @if (IsInEditingMode)
                                {
                                    @RenderImage(x => x.IsoImage, isEditable: true)
                                }
                                else
                                {
                                    <img src="@Model.IsoImage.Src" alt="@Model.IsoImage.Alt" width="46" height="47">
                                }
                            </div>
                            <div class="col col-xs-9 col-md-8 grey grey-300">
                                @if (IsInEditingMode)
                                {
                                    @Editable(x => x.CompanyName)
                                }
                                else
                                {
                                    <p class="small mb0">
                                        @Editable(x => x.CompanyName)
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                    @foreach (var section in Model.LinkSections)
                    {
                        <div class="col col-xs-6 col-md-3">
                            <h5>@Editable(section, x => x.Title)</h5>

                            <ul class="list-unstyled uppercase">
                                @foreach (var link in section.Links)
                                {
                                    <li>
                                        @RenderLink(link, x => x.Link, true)
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="col col-xs-12 col-md-3">
                        <h5>@Model.SocialTitle</h5>
                        <ul class="list-inline">
                            @if (Model.FacebookLink != null)
                            {
                                <li><a href="@Model.FacebookLink.Url" target="_blank" title="@Model.FacebookLink.Title" class="btn btn-circle"><i class="icon icon-facebook"></i></a></li>
                            }
                            @if (Model.YoutubeLink != null)
                            {
                                <li><a href="@Model.YoutubeLink.Url" target="_blank" title="@Model.YoutubeLink.Title" class="btn btn-circle"><i class="icon icon-youtube"></i></a></li>
                            }
                            @if (Model.LinkedInLink != null)
                            {
                                <li><a href="@Model.LinkedInLink.Url" target="_blank" title="@Model.LinkedInLink.Title" class="btn btn-circle"><i class="icon icon-linkedin"></i></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>