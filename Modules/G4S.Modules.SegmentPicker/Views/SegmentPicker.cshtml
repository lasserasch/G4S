@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<G4S.Modules.SegmentPicker.Models.SegmentPicker>
<section class="segment-picker row">
    <div class="col col-xs-12 col-md-6 bg-black white">
        @if (!IsInEditingMode && Model.LeftBackgroundImage != null)
        {

            <div class="background" style="background-image: url('@Model.LeftBackgroundImage.Src');"></div>
            @RenderLink(Model, x => x.LeftLink, new System.Collections.Specialized.NameValueCollection { { "class", "cover" } }, true)

        }

        <div class="row">
            <div class="col col-xs-9 col-xs-offset-2 col-md-8 col-md-offset-3 entry-content">
                <!-- RTE content -->
                @if (IsInEditingMode)
                {
                    @RenderImage(m => m.LeftBackgroundImage, isEditable: true)
                    @Editable(Model, x => x.LeftLink)
                }
                <h1>@Editable(Model, x => x.LeftTitle)</h1>
                <p>@Editable(Model, x => x.LeftText)</p>
                <span class="btn">
                    @if (Model.LeftLink != null && Model.LeftLink.Title != null)
                    { 
                  <text> @Model.LeftLink.Text</text>
                    }
                </span>
            </div>
        </div>
    </div>
    <div class="col col-xs-12 col-md-6 bg-primary white">

        @if (!IsInEditingMode && Model.RightBackgroundImage != null)
        {
            <div class="background" style="background-image: url('@Model.RightBackgroundImage.Src');"></div>
            @RenderLink(Model, x => x.RightLink, new System.Collections.Specialized.NameValueCollection { { "class", "cover" } }, true)

        }

         <div class="row">
            <div class="col col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-1 entry-content text-right">
                <!-- RTE content -->
                @if (IsInEditingMode)
                {
                    @RenderImage(m => m.RightBackgroundImage, isEditable: true)
                    @Editable(Model, x => x.RightLink)
                }
                <h1>@Editable(Model, x => x.RightTitle)</h1>
                <p>@Editable(Model, x => x.RightText)</p>
              
                <span class="btn">
                    @if (Model.RightLink != null && Model.RightLink.Title != null)
                    {
                        <text>  @Model.RightLink.Text</text>
                    }
                </span>
            </div>
        </div>
    </div>
</section>
