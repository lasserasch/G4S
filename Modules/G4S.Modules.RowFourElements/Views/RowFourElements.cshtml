@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<G4S.Modules.RowOneElement.Models.RowOneElement>
<!--Row with one element-->
@{
    var imageUrl = "";
    if (Model.BackgroundImage != null)
    {
        imageUrl = Model.BackgroundImage.Src;
    }
    var btnclass = "";
    if (@Model.Button != null)
    {
        btnclass = Model.Button.Value;
    }
}

<section class="row" style="background-image: url('@imageUrl')">
    <div class="col col-xs-12 col-md-6">
        <div class="row">
            <div class="col col-xs-10 col-xs-offset-1 col-md-9 col-md-offset-2">
              

                @if (Model.Short)
                {
                    <div class="entry-content">
                        <!-- RTE content -->
                        <h3>@Editable(Model, x => x.Title)</h3>
                        @if (IsInEditingMode)
                        {
                            @RenderImage(x => x.BackgroundImage, isEditable: true)
                            <br/>
                            @Editable(Model, x => x.Text)
                            }
                            else
                            {
                            <p>@Editable(Model, x => x.Text)</p>
                        }
                    </div>
                }
                else
                {
                    <div class="entry-content">
                        <!-- RTE content -->
                        <h2>@Editable(Model, x => x.Title)</h2>
                        @if (IsInEditingMode)
                        {
                            @RenderImage(x => x.BackgroundImage, isEditable: true)
                            <br />
                            @Editable(Model, x => x.Text)
                            }
                            else
                            {
                            <p>@Editable(Model, x => x.Text)</p>
                        }

@if (IsInEditingMode)
{
    <br/>
}
                        @RenderLink(Model, x => x.Link, new System.Collections.Specialized.NameValueCollection { { "class", btnclass } }, true)
                    </div>
                }
            </div>
        </div>
    </div>
</section>