@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<G4S.Modules.YoutubePlayer.Models.YoutubePlayer>

@{
    var backgroundUrl = "";
    if (Model.BackgroundImage != null)
    {
        backgroundUrl = Model.BackgroundImage.Src;
    }
}
<div class="video video--youtube js-youtubeplayer" data-video-id="@Model.VideoId" style="background-image:url('@backgroundUrl')">
    <div class="video-overlay js-video-overlay">
        <div class="content">
            <div class="row">
                <div class="col col-xs-10 col-xs-offset-1 col-md-6 white">
                    <h2>@Editable(Model, x => x.Title)</h2>
                    @if (!IsInEditingMode)
                    {
                        <p>

                            @Editable(Model, x => x.Text)
                        </p>
                    }

                    @if (IsInEditingMode)
                    {
                        @Editable(Model, x => x.Text)
                        @RenderImage(m => m.BackgroundImage, isEditable: true)
                        <text> Video ID :</text> @Editable(Model, x => x.VideoId)
                    }

                    <button class="js-play-button">
                        <svg width="80" height="80" class="play-icon" viewBox="0 0 100 100">
                            <circle r="46" cx="50" cy="50" class="circle"></circle>
                            <polygon points="40,30 70,50 40,70" class="triangle" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>