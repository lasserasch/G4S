@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<G4S.Modules.ProductList.Models.ProductList>
<section class="row entry-content">
    <div class="col col-xs-10 col-xs-offset-1">

        <div class="row">
            <div class="col col-xs-12">
                <h2>@Editable(x => x.Title)</h2>
            </div>
            <div class="col col-xs-12 col-md-6">
                @if (IsInEditingMode)
                {
                    @Editable(x => x.Text)
                }
                else
                { 
                <p>@Editable(x => x.Text)</p>
                }
            </div>
        </div>

        <div class="row entry-content__grid-parent">
            @foreach (var product in Model.Products)
            {
                <div class="col col-xs-12 col-md-6 col-lg-3 par__equal-align">
                    <div class="entry-content__grid">
                        @RenderImage(product, x => x.Image, isEditable: true)
                        <h3>@Editable(product, x => x.Title)</h3>
                        <div class="equal-align">
                            @if (IsInEditingMode)
                            {
                                @Editable(product, x => x.Text)
                            }
                            else
                            {
                                <p>@Editable(product, x => x.Text)</p>
                            }

                            @RenderLink(product, x => x.Link, new System.Collections.Specialized.NameValueCollection { { "class", "btn" } }, true)

                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>