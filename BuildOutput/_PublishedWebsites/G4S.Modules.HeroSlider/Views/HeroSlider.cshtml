@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Website.Models.G4S.Components.HeroSlider.HeroSlider>

Hero slider

@foreach (var slide in Model.Slides)
{
    <text>Title:</text> @Editable(slide, x => x.Title)
    <br />

    <text>Text:</text> @Editable(slide, x => x.Text)
    <br />
        <text>Image : </text>

        @RenderImage(slide, x => x.Image, isEditable: true)
}